API_URL=https://api.backpack.exchange

# BACKPACK KEYS
BACKPACK_API_KEY=
BACKPACK_API_SECRET=


# ================= GLOBAL CONFIG =================
TRADING_STRATEGY=GRID
LOG_ENABLED=true
DEBUG_VERBOSE=true
PERF_LOGGING_ENABLED=true

# ================= GRID MODE CONFIG =================
GRID_MARKET=SOL_USDC_PERP               # The trading pair to run the grid on
LOWER_PRICE=165                         # Bottom price of the grid
UPPER_PRICE=185                         # Top price of the grid
NUMBER_OF_GRIDS=40                      # Number of grids between lower and upper
GRID_ACTIVATION_VOL=2000000             # Minimum 24h volume to activate grid
GRID_DYNAMIC_ENABLED=true               # Enables ATR-based dynamic grid sizing

# ATR Parameters for dynamic grid sizing
ATR_PERIOD=14
ATR_MULTIPLIER=1.5
ATR_SMOOTHING=5

# Minimum tick size buffer to avoid immediate taker orders
MIN_TICK_BUFFER=0.01                    # Minimum price gap from best bid/ask to place limit orders safely

# ================= ORDER VOLUME & POSITION SIZING =================
FIXED_ORDER_VOLUME=150                  # Order volume per grid level (base, must be > 0)

# ================= RISK & EXECUTION =================
MAX_ORDER_OPEN=10                       # Max simultaneous open grid orders
FEE_BUFFER=0.001                       # Fee buffer decimal (0.1% = 0.001)

# Trailing Stoploss (optional, adds downside protection)
TRAILING_STOPLOSS_ENABLED=true
TRAILING_STOPLOSS_PERCENT=0.02         # 2% trailing stoploss from last profitable grid sell

# Order management: stale order cancellation and rebalance
ORDER_REBALANCE_ENABLED=true
ORDER_STALE_TIME=300                   # Seconds before stale order replaced

# Ensure unique client IDs for each order
UNIQUE_CLIENT_ID_ENABLED=true          # Enables unique client ID generation per order to avoid duplication errors

# ================= LEVERAGE & EXPOSURE =================
POSITION_LEVERAGE=25                    # Leverage to use per position
DYNAMIC_LEVERAGE_ENABLED=true          # Adjust leverage based on volatility
MAX_TOTAL_EXPOSURE=10000                # Max USD exposure limit for safety

# ================= SAFETY LIMITS =================
MAX_DAILY_LOSS=4.0                     # Max daily loss in %
MAX_DAILY_TRADES=500                   # Max trades per day

# Volume cooldown to pause grid if volume drops suddenly
VOLUME_COOLDOWN_ENABLED=true
VOLUME_COOLDOWN_THRESHOLD=1500000

# ================= ALERTS & NOTIFICATIONS =================
NOTIFY_ON_MAX_DAILY_LOSS=true

# ================= DISABLED / UNUSED (for GRID) =================
# CERTAINTY=
# EMA_FAST=
# RSI_PERIOD=
# ADX_ENABLED=
# ENABLE_STOPLOSS=     (replaced by trailing stoploss above)
# VOLUME_FILTER_ENABLED=